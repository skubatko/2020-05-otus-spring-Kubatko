<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2020-07-01--0004-book-comments" author="skubatko">
        <createTable tableName="book_comments">
            <column name="id" type="bigint" autoIncrement="false">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="content" type="varchar(1023)"/>
            <column name="book_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_book_comments_books"
                             references="books(id)"
                             deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
